{
  "compilerOptions": {
    "target": "ES2022",
    "module": "umd",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "node",
    "outDir": "./src/js",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/ts/**/*.ts"
  ]
}